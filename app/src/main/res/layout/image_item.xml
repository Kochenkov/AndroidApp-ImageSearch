<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/image_item"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/item_border_width"
        android:background="@drawable/gradient_up"
        app:layout_constraintEnd_toEndOf="@+id/iv_item"
        app:layout_constraintStart_toStartOf="@+id/iv_item"
        app:layout_constraintTop_toTopOf="@+id/iv_item" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/item_border_width"
        android:background="@drawable/gradient_bottom"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item"
        app:layout_constraintEnd_toEndOf="@+id/iv_item"
        app:layout_constraintStart_toStartOf="@+id/iv_item" />

    <View
        android:layout_width="@dimen/item_border_width"
        android:layout_height="0dp"
        android:background="@drawable/gradient_left"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item"
        app:layout_constraintStart_toStartOf="@+id/iv_item"
        app:layout_constraintTop_toTopOf="@+id/iv_item" />

    <View
        android:layout_width="@dimen/item_border_width"
        android:layout_height="0dp"
        android:background="@drawable/gradient_right"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item"
        app:layout_constraintEnd_toEndOf="@+id/iv_item"
        app:layout_constraintTop_toTopOf="@+id/iv_item" />


</androidx.constraintlayout.widget.ConstraintLayout>